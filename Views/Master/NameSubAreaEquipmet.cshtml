@{
    ViewData["Title"] = "Equipmet of Sub Area";

    Layout = "~/Views/Shared/_LayoutWeb.cshtml";

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="~/assets/css/theme.min.css">

    <link rel="stylesheet" href="~/assets/css/tablefreezer.css">

    <link href="~/assets/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">

    <link href="~/assets/css/choices.min.css" type="text/css" rel="stylesheet">

    <link href="~/css/autocomplete.css" type="text/css" rel="stylesheet">

    <script src="~/assets/js/config.js"></script>


    <script src="~/assets/js/all.min.js"></script>

}
<div class="content mt-1" style="font-size: 12px; min-height: auto!important;" id="divPage" ng-controller="ctrlAppPage">

    <div class="row g-0">

        <div class="col-12">

            <div class="card shadow-sm p-2 mb-3 bg-light rounded">

                <div class="card-body p-2">

                    <div class="row">


                        <div class="m-3 row  gx-0 align-items-center">

                            <div class="card px-2 ">
                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                    <div class="col-6 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span class=" me-2 text-primary"><B>|</B></span>Sub Area Group</h5>
                                    </div>
                                    <div class="col-auto col-md">
                                        <div class="d-flex align-items-start py-2 justify-content-end">
                                            <span class="mx-2">
                                                <button class="btn btn-primary btn-sm" style="width: 100px;" ng-click="confirmSave()">Save</button>
                                            </span>
                                            <span class="mx-2">
                                                <button class="btn btn-secondary btn-sm" style="width: 100px;" ng-click="confirmBack()">Back</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 align-items-center pt-2 pb-3">


                                    <div class="col-auto">
                                        <label class="form-label ps-0 pb-1 col-auto" for="plant">Plant </label>
                                        <select class="form-control mb-0 col-auto" ng-model="plant_selected[0]" ng-change="actionChangedMaster('plant')">
                                            <option ng-repeat="item2 in data_plant" ng-value="item2.id">
                                                {{item2.name}}
                                            </option>
                                        </select>
                                    </div>
                                    <div class="col-auto">
                                        <label class="form-label ps-0 pb-1 col-auto" for="area">Area Process Unit </label>
                                        <select class="form-control mb-0  col-auto" ng-model="area_selected[0]" ng-change="actionChangedMaster('area')">
                                            <option ng-repeat="item2 in data_area" ng-value="item2.id">
                                                {{item2.name}}
                                            </option>
                                        </select>
                                    </div>
                                    <div class="col-auto">
                                        <label class="form-label ps-0 pb-1 col-auto" for="area">Complex </label>
                                        <select class="form-control mb-0  col-auto" ng-model="toc_selected[0]" ng-change="actionChangedMaster('toc')">
                                            <option ng-repeat="item2 in data_toc" ng-value="item2.id"
                                                    ng-if="item2.id_company == plant_selected && item2.id_area == area_selected">
                                                {{item2.name}}
                                            </option>
                                        </select>
                                    </div>
                                    <div class="col-auto">
                                        <label class="form-label ps-0 pb-1 col-auto" for="apu">Area Process Unit </label>
                                        <select class="form-control mb-0  col-auto" ng-model="apu_selected[0]"
                                                ng-change="actionChangedMaster('apu')">
                                            <option ng-repeat="item2 in data_apu" ng-value="item2.id">
                                                {{item2.name}}
                                            </option>
                                        </select>
                                    </div>

                                    <div class="bg-white border-top border-bottom border-200 position-relative top-1">
                                        <div class="table-responsive scrollbar-overlay mx-n1 px-1">
                                            <table class="table table-sm fs--1 mb-0">
                                                <thead class=" text-uppercase">

                                                    <tr class="text-center">
                                                        <th class="pe-5 " style="width:100px">No</th>
                                                        <th class="pe-5">Group of Sub Area</th>
                                                        <th class="pe-5">Equipmet of Sub Area</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="list">

                                                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                                                        ng-repeat="item in data">

                                                        <td class="">
                                                            <input type="checkbox" class="form-check-input"
                                                                   style="cursor: pointer;width:20px; height:20px;"
                                                                   ng-if="(item.active_type==1)" checked
                                                                   ng-click="actionChangedData(item,'accept_status')">

                                                            <input type="checkbox" class="form-check-input"
                                                                   style="cursor: pointer;width:20px; height:20px;"
                                                                   ng-if="!(item.active_type==1)"
                                                                   ng-click="actionChangedData(item,'inaccept_status')">
                                                        </td>

                                                        <td class="align-middle ">
                                                            <div class="col-auto" style="width: 30px;">
                                                                <div class="float-end ">
                                                                    <span class="mx-1">
                                                                        <button class="btn btn-outline-secondary p-2"
                                                                                style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                                                                ng-click=removeDataGroupSubArea(item.seq,$index)
                                                                                data-toggle="tooltip"
                                                                                data-placement="top"
                                                                                title="Remove">
                                                                            <span class="fa-regular fa-trash-can fa-lg"></span>
                                                                        </button>
                                                                    </span>
                                                                    <span class="mx-1">
                                                                        <button class="btn btn-outline-secondary p-2"
                                                                                style="color: #0abe0a; background-color: #f1f2f4; border-color: #0abe0a;"
                                                                                ng-click=addDataGroupSubArea(item.seq,$index)
                                                                                data-toggle="tooltip"
                                                                                data-placement="top"
                                                                                title="Add">
                                                                            <span class="fas fa-square-plus fa-lg"></span>
                                                                        </button>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="col-auto">
                                                                <select class="form-select form-select-sm rounded-1"
                                                                        ng-class="{'disabled-link': isDisableStatus}"
                                                                        ng-change="actionChangeGroupSubArea(item)"
                                                                        ng-model="item.id_sections_group"
                                                                        style="min-width: 100px; font-size: 10.24px;">
                                                                    <option ng-repeat="item_m in master_sections_group" ng-value="item_m.id">
                                                                        {{item_m.name}}
                                                                    </option>
                                                                </select>
                                                            </div>
                                                        </td>
                                                        <td class="align-middle ">
                                                            <div class="col-auto" style="width: 30px;">
                                                                <div class="float-end ">
                                                                    <span class="mx-1">
                                                                        <button class="btn btn-outline-secondary p-2"
                                                                                style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                                                                ng-click="removeData(it1em.seq,$index)"
                                                                                data-toggle="tooltip"
                                                                                data-placement="top"
                                                                                title="Remove">
                                                                            <span class="fa-regular fa-trash-can fa-lg"></span>
                                                                        </button>
                                                                    </span>
                                                                    <span class="mx-1">
                                                                        <button class="btn btn-outline-secondary p-2"
                                                                                style="color: #0abe0a; background-color: #f1f2f4; border-color: #0abe0a;"
                                                                                ng-click="addData(it1em.seq,$index)"
                                                                                data-toggle="tooltip"
                                                                                data-placement="top"
                                                                                title="Add">
                                                                            <span class="fas fa-square-plus fa-lg"></span>
                                                                        </button>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="col-auto">
                                                                <input class="form-control" id="name" data-ng-model="item.name" type="text" placeholder="Name"
                                                                       ng-change="actionChangedData(item,'name')" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr ng-if="item.name === null">
                                                        <td colspan="6">
                                                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>

                                </div>


                            </div>
                        </div>

                    </div>

                </div>


            </div>
        </div>

    </div>


</div>
@section Scripts {

    <script src="~/assets/js/angular.min.js"></script>
    <script src="~/assets/js/lodash.min.js"></script>
    <script src="~/assets/js/phoenix.js"></script>
    <script src="~/assets/js/choices.min.js"></script>
    <script src="~/assets/js/fakedata.js"></script>

    <script src="~/js/_master/hra/sub_area_equipmet.js"></script>

}