<div class="p-6" id="divPage" ng-controller="ctrlAppPage">
    <div class="card container mt-6 px-6 py-4">
        <div class="title">
            <span class=" me-2 text-primary"><B>|</B></span> 
            Type of Hazard
        </div>
        <hr>
        <div class="d-flex align-items-end justify-content-between pb-2">
            <div class="d-flex gap-4">
                <button class="btn btn-sm btn-success gap-2" ng-click="newData()">
                    <i class="fa-solid fa-plus"></i>
                    New Type of Hazard
                </button>
