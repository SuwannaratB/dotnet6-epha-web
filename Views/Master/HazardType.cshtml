@{
    ViewData["Title"] = "Hazard Type";

    Layout = "~/Views/Shared/_LayoutWeb.cshtml";

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="~/assets/css/theme.min.css">

    <link rel="stylesheet" href="~/assets/css/tablefreezer.css">

    <link href="~/assets/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">

    <link href="~/assets/css/choices.min.css" type="text/css" rel="stylesheet">

    <link href="~/css/autocomplete.css" type="text/css" rel="stylesheet">

    <script src="~/assets/js/config.js"></script>


    <script src="~/assets/js/all.min.js"></script>

}
<div class="content mt-1" style="font-size: 12px; min-height: auto!important;" id="divPage" ng-controller="ctrlAppPage">

    <div class="row g-0">

        <div class="col-12">

            <div class="card shadow-sm p-2 mb-3 bg-light rounded">

                <div class="card-body p-2">

                    <div class="row">


                        <div class="m-3 row  gx-0 align-items-center">

                            <div class="card px-2 ">
                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                    <div class="col-6 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span class=" me-2 text-primary"><B>|</B></span>Type of Hazard</h5>
                                    </div>
                                    <div class="col-auto col-md">
                                        <div class="d-flex align-items-start py-2 justify-content-end">
                                            <span class="mx-2">
                                                <button class="btn btn-primary btn-sm" style="width: 100px;" ng-click="confirmSave()">Save</button>
                                            </span>
                                            <span class="mx-2">
                                                <button class="btn btn-secondary btn-sm" style="width: 100px;" ng-click="confirmBack()">Back</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 align-items-center pt-2 pb-3">
                                    <div class="bg-white border-top border-bottom border-200 position-relative top-1">
                                        <div class="table-responsive scrollbar-overlay mx-n1 px-1">

                                            <table class="table table-sm fs--1 mb-0">
                                                <thead class=" text-uppercase">

                                                    <tr class="text-center">
                                                        <th class="pe-5" style="width:100px"> </th>
                                                        <th class="pe-5">Active</th>
                                                        <th class="pe-5">No</th>
                                                        <th class="pe-5">Name</th>
                                                        <th class="pe-5">Descriptions</th>
                                                        <th class="pe-5" style="width:100px"> </th>
                                                    </tr>
                                                </thead>
                                                <tbody class="list">

                                                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                                                        ng-repeat="item in data">

                                                        <td class="text-end">
                                                            <a class="btn btn-outline-light text-primary" style="cursor: pointer;"
                                                               ng-click="addData(item)" ng-if="$last">
                                                                Add
                                                            </a>
                                                        </td>
                                                        <td class="">
                                                            <input type="checkbox" class="form-check-input"
                                                                   style="cursor: pointer;width:20px; height:20px;"
                                                                   ng-if="(item.active_type==1)" checked
                                                                   ng-click="actionChangedData(item,'accept_status')">

                                                            <input type="checkbox" class="form-check-input"
                                                                   style="cursor: pointer;width:20px; height:20px;"
                                                                   ng-if="!(item.active_type==1)"
                                                                   ng-click="actionChangedData(item,'inaccept_status')">
                                                        </td>

                                                        <td class="">
                                                            {{$index +1}}
                                                        </td>

                                                        <td class="">
                                                            <input class="form-control" id="name" data-ng-model="item.name" type="text" placeholder="Name"
                                                                   ng-change="actionChangedData(item,'name')" />
                                                        </td>

                                                        <td class="">
                                                            <input class="form-control" id="name" data-ng-model="item.descriptions" type="text" placeholder="Descriptions"
                                                                   ng-change="actionChangedData(item,'descriptions')" />
                                                        </td>
                                                        <td class="text-end">
                                                            <a class="btn btn-outline-light text-danger" style="cursor: pointer;"
                                                               ng-click="removeData(item)">
                                                                Delete
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <tr ng-if="item.name === null">
                                                        <td colspan="6">
                                                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                                @*<div class="row g-3 align-items-center pt-2 pb-3">
                                <span class="mx-2">
                                <button class="btn btn-secondary btn-sm" style="width: 100px;" ng-click="preview()">Preview Data</button>
                                <div>
                                แสดงเหมือนตาราง
                                </div>
                                </span>
                                </div>*@

                            </div>
                        </div>

                    </div>

                </div>


            </div>
        </div>

    </div>


</div>
@section Scripts {

    <script src="~/assets/js/angular.min.js"></script>
    <script src="~/assets/js/lodash.min.js"></script>
    <script src="~/assets/js/phoenix.js"></script>
    <script src="~/assets/js/choices.min.js"></script>
    <script src="~/assets/js/fakedata.js"></script>
     
    <script src="~/js/_master/hra_hazard_type.js"></script>

}