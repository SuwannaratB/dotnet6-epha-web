@{
    ViewData["Title"] = "Business Unit";

    Layout = "~/Views/Shared/_LayoutWeb.cshtml";

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="~/assets/css/theme.min.css">

    <link rel="stylesheet" href="~/assets/css/tablefreezer.css">

    <link href="~/assets/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">

    <link href="~/assets/css/choices.min.css" type="text/css" rel="stylesheet">

    <link href="~/css/autocomplete.css" type="text/css" rel="stylesheet">

    <script src="~/assets/js/config.js"></script>


    <script src="~/assets/js/all.min.js"></script>

}
<div class="content mt-1" style="font-size: 12px; min-height: auto!important;" id="divPage" ng-controller="ctrlAppPage">

    <div class="row g-0">

        <div class="col-12">

            <div class="card shadow-sm p-2 mb-3 bg-light rounded">

                <div class="card-body p-2">

                    <div class="row">

                        <div class="m-3 row  gx-0 align-items-center">

                            <div class="card px-2"
                                style="padding: 20px 20px 20px 20px; max-width: calc(100% - 30px); box-sizing: border-box;">
                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                    <div class="col-6 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span
                                                class=" me-2 text-primary"><B>|</B></span>Business Unit</h5>
                                    </div>
                                    <div style="padding: 10px 4px 10px 4px;">
                                        <hr style="margin: 0 4px; border: 0; border-top: 1px solid #ccc;" />
                                    </div>

                                </div>

                                <div class="row g-3 align-items-center pt-2 pb-3">
                                        <div class="col-md-4 pt-3 ps-3">
                                            <button class="btn btn-custom btn-sm"
                                                style="color: #0abe0a; background-color: #0abe0a; border-color: #0abe0a;"
                                                ng-click="addData(newItem)">
                                                <span class="fa-solid fa-plus" style="color: #fff;"></span>
                                                <span class="form-label mb-0" style="color: #ffffff;">New Business
                                                    Unit</span>
                                            </button>
                                        </div>

                                        <div class="col-md-2 align-items-center">
                                            <div class="row g-0 align-items-center">
                                                <div class="col-12">
                                                    <label class="form-label ps-0">
                                                        Plant
                                                    </label>

                                                    <div class="d-flex me-3 cursor-pointer">
                                                        <select class="form-control mb-0 col-auto cursor-pointer"
                                                            ng-model="plant_selected[0]"
                                                            ng-change="actionChangedMaster('plant')">
                                                            <option ng-repeat="item2 in data_plant" ng-value="item2.id">
                                                                {{item2.name}}
                                                            </option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-2 align-items-center">
                                            <div class="row g-0 align-items-center">
                                                <div class="col-12">
                                                    <label class="form-label ps-0">
                                                        Area Process Unit

                                                    </label>
                                                    <div class="d-flex me-3">
                                                        <select class="form-control mb-0 col-auto cursor-pointer"
                                                            ng-model="area_selected[0]"
                                                            ng-change="actionChangedMaster('area')">
                                                            <option ng-repeat="item2 in data_area" ng-value="item2.id">
                                                                {{item2.name}}
                                                            </option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 align-items-center">
                                            <div class="row g-0 align-items-center">
                                                <div class="col-12">
                                                    <label class="form-label ps-0" for="area">
                                                        Complex
                                                    </label>

                                                    <div class="d-flex me-3">
                                                        <select class="form-control cursor-pointer"
                                                            ng-model="toc_selected[0]"
                                                            ng-change="actionChangedMaster('toc')">
                                                            <option ng-repeat="item2 in data_toc" ng-value="item2.id"
                                                                ng-if="item2.id_company == plant_selected && item2.id_area == area_selected">
                                                                {{item2.name}}
                                                            </option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 pt-3">
                                            <div class="position-relative">
                                                <button class="btn btn-secondary btn-sm" style="width: 100px;"
                                                    ng-click="confirmBack()">Back</button>
                                                <button class="btn btn-primary btn-sm" style="width: 100px;"
                                                    ng-click="confirmSave()">Save</button>
                                            </div>
                                        </div>
                                    @* --- Start เพิ่ม/แก้ไข Account Contracter ตรงนี้ --- *@
                                    <div class="bg-white border-top border-bottom border-200 position-relative top-1">
                                        <div class="table-responsive scrollbar-overlay mx-n1 px-1">
                                            <table class="table table-sm fs--1 mb-0">
                                                <thead class=" text-uppercase">

                                                    <tr class="text-center">
                                                        <th class="pe-5">Active</th>
                                                        <th class="pe-5">No</th>
                                                        <th class="pe-5">Name</th>
                                                        <th class="pe-5">Descriptions</th>
                                                        <th class="pe-5" style="width:100px"> </th>
                                                    </tr>
                                                </thead>
                                                <tbody class="list">

                                                    <!-- Existing Rows -->
                                                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                                                        ng-repeat="item in data"
                                                        ng-if="item.id_company == plant_selected && item.id_area == area_selected && item.id_plant_area == toc_selected">
                                                        <td class="text-center">
                                                            <input type="checkbox" class="form-check-input"
                                                                style="cursor: pointer;width:20px; height:20px;"
                                                                ng-if="item.active_type == 1" checked
                                                                ng-click="actionChangedData(item, 'accept_status')">
                                                            <input type="checkbox" class="form-check-input"
                                                                style="cursor: pointer;width:20px; height:20px;"
                                                                ng-if="item.active_type != 1"
                                                                ng-click="actionChangedData(item, 'inaccept_status')">
                                                        </td>

                                                        <td class="text-center">
                                                            {{$index + 1}}
                                                        </td>

                                                        <td class="text-center">
                                                            <input class="form-control" id="name"
                                                                data-ng-model="item.name" type="text" placeholder="Name"
                                                                ng-change="actionChangedData(item, 'name')" />
                                                        </td>

                                                        <td class="text-center">
                                                            <input class="form-control" id="name"
                                                                data-ng-model="item.descriptions" type="text"
                                                                placeholder="Descriptions"
                                                                ng-change="actionChangedData(item, 'descriptions')" />
                                                        </td>

                                                        <td class="text-center">
                                                            <button class="btn btn-outline-secondary p-2"
                                                                data-toggle="tooltip" data-placement="top"
                                                                title="Remove"
                                                                style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                                                ng-click="removeData(item.seq, $index)">
                                                                <span class="fa-regular fa-trash-can fa-lg"></span>
                                                            </button>
                                                        </td>
                                                    </tr>


                                                </tbody>



                                            </table>

                                        </div>

                                    </div>

                                    @* --- End เพิ่ม/แก้ไข Account Contracter ตรงนี้ --- *@
                                    @* <div class="col-auto"> *@
                                    @* <a class="btn btn-outline-light text-primary" style="cursor: pointer;"
                                    ng-click="addData(item)" >
                                    Add
                                    </a> *@
                                    @* <span class="mx-2">
                                    <button class="btn btn-success btn-sm" style="cursor: pointer;width: 100px;"
                                    ng-click="addData(item)">Add Row</button>
                                    </span> *@
                                    @* </div> *@
                                </div>


                            </div>
                        </div>
                        <div class="m-3 row  gx-0 align-items-center d-none">
                            <div class="card px-2 ">
                                File Atthachment : เอกสารประกอบไม่ใช่การ Import data เข้าระบบ
                            </div>
                        </div>

                    </div>

                </div>


            </div>
        </div>

    </div>


</div>
@section Scripts {

    <script src="~/assets/js/angular.min.js"></script>
    <script src="~/assets/js/lodash.min.js"></script>
    <script src="~/assets/js/phoenix.js"></script>
    <script src="~/assets/js/choices.min.js"></script>
    <script src="~/assets/js/fakedata.js"></script>

    <script src="~/js/_master/unit.js"></script>

}