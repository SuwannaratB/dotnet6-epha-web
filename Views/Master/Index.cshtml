        <div class="sidebar bg-secondary">
            <section class="sidebar-start">
                <div class="sidebar-menu" 
                    ng-class="{'active': item.active}"
                    ng-repeat="item in menu_List"
                    ng-click="changeTabSidebar(item)">
                    <i class="{{ item.icon }}"></i>
                    <span>{{ item.title }}</span>
                </div>
            </section>
            <section class="sidebar-end">
                <div class="sidebar-menu end" 
                    ng-class="{'active': item.active}"
                    ng-click="onReverse()">
