                    ng-repeat="item in menu_List[0].sub_menu"
                    ng-click="onClickMenu(item)">
                    <div class="d-flex align-items-center justify-content-between w-100">
                        <div class="d-flex d-flex align-items-center gap-4">
                            <div style="color: #707070">
                                {{ $index + 1 }}
                            </div>
                            <span style="color: #e3e6ed;">|</span>
                            <div class="p">
                                {{ item.title }}
                            </div>
                        </div>
                        <div class="bard-setting">
                            <i class="fa-solid fa-wrench"></i>
