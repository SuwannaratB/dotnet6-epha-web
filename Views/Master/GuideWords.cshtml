<div class="p-6" id="divPage" ng-controller="ctrlAppPage">
    <div class="card container mt-6 px-6 py-4">
        <div class="title">
            <span class=" me-2 text-primary"><B>|</B></span> 
            Guide Words
        </div>
        <hr>
        <div class="d-flex align-items-end justify-content-between pb-4">
            <div class="d-flex gap-4">
                <button class="d-flex btn btn-sm btn-success gap-2" ng-click="newData()">
                    <i class="fa-solid fa-plus"></i>
                    New Guide Word
                </button>
                <div class="d-flex gap-2">
                    @* <button class="d-flex btn btn-sm btn-outline-gray gap-2" ng-click="">
                        <i class="fa-solid fa-file-arrow-down" style="color: burlywood;"></i>
                        Import Excel
                    </button>
                    <button class="d-flex btn btn-sm btn-outline-gray gap-2" ng-click="">
                        <i class="fa-solid fa-download" style="color: darkcyan;"></i>
                        Export Excel
                    </button> *@
                </div>
            </div>
            <div class="d-flex align-items-end gap-4">
                <div class="dropdown">
                    <label class="form-label ps-0 pb-1 col-auto" for="area">Parameter</label>
                    <select class="form-control mb-0 col-auto" 
                        style="padding: 7px"
                        ng-model="selected.parameter"
                        ng-change="actionfilter('parameter', selected.parameter)">
                        <option value="">All</option>
                        <option ng-repeat="item2 in master_parameter" ng-value="item2.id">
                            {{item2.name}}
                        </option>
                    </select>
                </div>
                <div class="dropdown">
                    <label class="form-label ps-0 pb-1 col-auto" for="area">Application</label>
                    <select class="form-control mb-0 col-auto" 
                        style="padding: 7px"
                        ng-model="selected.application"
                        ng-change="actionfilter('application', selected.application)">
                        <option value="">All</option>
                        <option ng-repeat="item2 in master_area_application" 
                            ng-if="selected.parameter == item2.id_parameter" 
                            ng-value="item2.id">
                            {{item2.name}}
                        </option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-secondary" style="width: 100px;" ng-click="confirmBack()">Back</button>
                    <button class="btn btn-sm btn-primary " style="width: 100px;" ng-click="confirmSave()">Save</button>
                </div>
            </div>
        </div>
        <div class="card p-2 overflow-auto">
            <table class="table table-sm fs--1 mb-0" >
                <thead class="bg-white"> 
                    <tr class="text-center">
                        <th class="align-middle"  style="min-width: 90px">No</th>
                        <th class="align-middle">Deviation</th>
                        <th class="align-middle">Guide Word</th>
                        <th class="align-middle">Process Deviation</th>
                        <th class="align-middle">Parameter</th>
                        <th class="align-middle">Application</th>
                        <th class="align-middle" style="min-width:100px">Default Active</th>
                        <th class="align-middle" style="min-width:100px">Active</th>
                        <th class="align-middle" style="min-width:100px">Management</th>
                    </tr>
                </thead>
                <tbody class="list">
                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                         ng-repeat="item in paginatedData" id="tr-{{item.seq}}">

                        <td class="align-middle position-relative">
                            <div id="new-{{item.seq}}" class="new hidden">New</div>
                            {{$index + 1 + ((currentPage - 1) * pageSize)}}
                        </td>

                        <td class="align-middle ">
                            <div class="col-auto pt-2">
                                <textarea class="form-control form-control-sm " 
                                    rows="1" 
                                    type="text"
                                    style=" min-width: 160px;"
                                    placeholder="Name"
                                    ng-required="true"
                                    ng-model="item.deviations"
                                    ng-change="actionChangedData(item,'deviations')">
                                </textarea>
                                <div class="validation-message">{{item.deviations ? '' : 'field is required.'}}</div>
                            </div>
                        </td>

                        <td class="align-middle ">
                            <div class="col-auto pt-2">
                                <textarea class="form-control form-control-sm" 
                                    rows="1" 
                                    type="text"
                                    style=" min-width: 160px;"
                                    placeholder="Name"
                                    ng-required="true"
                                    ng-model="item.guide_words"
                                    ng-change="actionChangedData(item,'guide_words')">
                                </textarea>
                                <div class="validation-message">{{item.guide_words ? '' : 'field is required.'}}</div>
                            </div>
                        </td>

                        <td class="align-middle ">
                             <div class="col-auto pt-2">
                               <textarea class="form-control form-control-sm" 
                                    rows="1" 
                                    type="text"
                                    style=" min-width: 160px;"
                                    placeholder="Name"
                                    ng-required="true"
                                    ng-model="item.process_deviation"
                                    ng-change="actionChangedData(item,'process_deviation')">
                                </textarea>
                                <div class="validation-message">{{item.process_deviation ? '' : 'field is required.'}}</div>
                            </div>
                        </td>

                        <td class="align-middle ">
                             <div class="col-auto pt-2">
                                <select class="form-control mb-0 col-auto" 
                                    style="width: 140px;" 
                                    placeholder="Name"
                                    ng-model="item.id_parameter"
                                    ng-change="actionChangedData(item,'parameter')">
                                    <option ng-repeat="item2 in master_parameter" ng-value="item2.id">
                                        {{item2.name}}
                                    </option>
                                </select>
                                <div class="validation-message">{{item.id_parameter || item.id_parameter == 0 ? '' : 'field is required.'}}</div>
                            </div>
                        </td>

                        <td class="align-middle ">
                             <div class="col-auto pt-2">
                                <select class="form-control mb-0 col-auto"
                                    style="width: 140px;" 
                                    placeholder="Name"
                                    ng-model="item.id_area_application"
                                    ng-change="actionChangedData(item,'application')">
                                    <option ng-repeat="item2 in master_area_application" 
                                        ng-if="item.id_parameter == item2.id_parameter"
                                        ng-value="item2.id">
                                        {{item2.name}}
                                    </option>
                                </select>
                                <div class="validation-message">{{item.id_area_application || item.id_area_application == 0 ? '' : 'field is required.'}}</div>
                            </div>
                        </td>
                        
                        <td class="align-middle ">
                            <input class="form-check-input"
                                id="flexSwitchCheckChecked"
                                style="cursor: pointer;width:20px; height:20px;"
                                type="checkbox"
                                ng-model="item.def_selected"
                                ng-true-value="'1'" 
                                ng-false-value="'0'"
                                ng-change="actionChangedData(item,'def_selected')" />
                        </td>

                        <td class="align-middle">
                            <input type="checkbox" 
                                class="form-check-input"
                                style="cursor: pointer;width:20px; height:20px;"
                                ng-if="(item.active_type==1)" 
                                checked
                                ng-click="actionChangedData(item,'accept_status')">
                            <input type="checkbox" 
                                class="form-check-input"
                                style="cursor: pointer;width:20px; height:20px;"
                                ng-if="!(item.active_type==1)"
                                ng-click="actionChangedData(item,'inaccept_status')">
                        </td>

                        <td class="align-middle ">
                            <button class="btn btn-outline-secondary p-2"
                                style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                ng-click=removeData(item)
                                data-toggle="tooltip"
                                data-placement="top"
                                title="Remove">
                                <span class="fa-regular fa-trash-can fa-lg"></span>
                            </button>
                            @* <button class="btn btn-outline-secondary p-2"
                                style="color: #0abe0a; background-color: #f1f2f4; border-color: #0abe0a;"
                                ng-click=addData(item.seq,$index)
                                data-toggle="tooltip"
                                data-placement="top"
                                title="Add">
                                <span class="fas fa-square-plus fa-lg"></span>
                            </button> *@
                        </td>
                    </tr>

                    <tr ng-if="data_filter.length == 0">
                        <td colspan="10">
                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                        </td>
                    </tr>
                </tbody>
            </table>
            <ul class="pagination d-flex align-items-center justify-content-center mt-2">
                <li class="page-item" ng-class="{disabled: currentPage === 1}">
                    <a class="page-link" href="" ng-click="prevPage()" tabindex="-1">Previous</a>
                </li>
                <li class="page-item" ng-show="1 < currentPage - range" ng-click="setPage(1)">
                    <a class="page-link" href="">1</a>
                </li>
                <li class="page-item" ng-show="1 < currentPage - range">
                    <span class="page-link">...</span>
                </li>
                <li class="page-item" ng-repeat="page in pages"
                    ng-show="page >= currentPage - range && page <= currentPage + range"
                    ng-class="{active: currentPage === page}">
                    <a class="page-link" href="" ng-click="setPage(page)">{{page}}</a>
                </li>
                <li class="page-item" ng-show="totalPages > currentPage + range">
                    <span class="page-link">...</span>
                </li>
                <li class="page-item" ng-show="totalPages > currentPage + range" ng-click="setPage(totalPages)">
                    <a class="page-link" href="">{{totalPages}}</a>
                </li>
                <li class="page-item" ng-class="{disabled: currentPage === totalPages}">
                    <a class="page-link" href="" ng-click="nextPage()">Next</a>
                </li>
            </ul>
        </div>
    </div>
</div>


