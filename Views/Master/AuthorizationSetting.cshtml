<div class="p-6" id="divPage" ng-controller="ctrlAppPage">
    <div class="card container mt-6 px-6 py-4">
        <div class="title">
            <span class=" me-2 text-primary"><B>|</B></span> 
            Authorization Setting
        </div>
        <hr>
        <div class="d-flex align-items-end justify-content-between pb-2">
            <div class="d-flex gap-4">
                <button class="btn btn-sm btn-success d-flex gap-2" ng-click="newData()">
                    <i class="fa-solid fa-plus"></i>
                    New Authorization Setting
                </button>
            </div>
            <div class="d-flex align-items-end gap-4">
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-secondary" style="width: 100px;" ng-click="confirmBack()">Back</button>
                    <button class="btn btn-sm btn-primary " style="width: 100px;" ng-click="confirmSave()">Save</button>
                </div>
            </div>
        </div>
        <div class="card p-2 overflow-auto">
            <table class="table table-sm fs--1 mb-0" >
                <thead class="bg-white"> 
                    <tr class="text-center">
                        <th class="align-middle"  style="min-width: 90px">No</th>
                        <th class="align-middle">Role Type</th>
                        <th class="align-middle">Setting Menu</th>
                        <th class="align-middle" style="min-width:100px">Setting Employee</th>
                        <th class="align-middle" style="min-width:100px">Management</th>
                    </tr>
                </thead>
                <tbody class="list">
                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                         ng-repeat="item in paginatedData" id="tr-{{item.seq}}">

                        <td class="align-middle position-relative">
                            <div id="new-{{item.seq}}" class="new hidden">New</div>
                            {{$index + 1 + ((currentPage - 1) * pageSize)}}
                        </td>

                        <td class="align-middle ">
                            <div class="col-auto pt-2">
                                <textarea class="form-control form-control-sm " 
                                    rows="1" 
                                    type="text"
                                    style=" min-width: 160px;"
                                    placeholder="Name"
                                    ng-required="true"
                                    ng-model="item.name"
                                    ng-change="actionChangedData(item,'name')">
                                </textarea>
                                <div class="validation-message">{{item.name ? '' : 'field is required.'}}</div>
                            </div>
                        </td>

                        <td class="align-middle ">
                            <div class="d-flex align-items-center justify-content-center gap-2 cursor-pointer" ng-click="openDataMenuList(item)">
                                <span class="fa-solid far fa fa-gear text-danger" style="font-size: 15px;">
                                </span>
                                <b style="font-size: 11px;">Setting Menu</b>
                            </div>
                        </td>

                        <td class="align-middle">
                            <div class="d-flex align-items-center justify-content-center gap-2 cursor-pointer" ng-click="openDataEmployeeAdd(item)">
                                <span class="fa-solid far fa fa-gear text-danger" style="font-size: 15px;">
                                </span>
                                <b style="font-size: 11px;">Setting Employee</b>
                            </div>
                        </td>

                        <td class="align-middle ">
                            <button class="btn btn-outline-secondary p-2"
                                style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                ng-click=removeData(item)
                                data-toggle="tooltip"
                                data-placement="top"
                                title="Remove">
                                <span class="fa-regular fa-trash-can fa-lg"></span>
                            </button>
                        </td>
                    </tr>

                    <tr ng-if="data_filter.length == 0">
                        <td colspan="10">
                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                        </td>
                    </tr>
                </tbody>
            </table>
            <ul class="pagination d-flex align-items-center justify-content-center mt-2">
                <li class="page-item" ng-class="{disabled: currentPage === 1}">
                    <a class="page-link" href="" ng-click="prevPage()" tabindex="-1">Previous</a>
                </li>
                <li class="page-item" ng-show="1 < currentPage - range" ng-click="setPage(1)">
                    <a class="page-link" href="">1</a>
                </li>
                <li class="page-item" ng-show="1 < currentPage - range">
                    <span class="page-link">...</span>
                </li>
                <li class="page-item" ng-repeat="page in pages"
                    ng-show="page >= currentPage - range && page <= currentPage + range"
                    ng-class="{active: currentPage === page}">
                    <a class="page-link" href="" ng-click="setPage(page)">{{page}}</a>
                </li>
                <li class="page-item" ng-show="totalPages > currentPage + range">
                    <span class="page-link">...</span>
                </li>
                <li class="page-item" ng-show="totalPages > currentPage + range" ng-click="setPage(totalPages)">
                    <a class="page-link" href="">{{totalPages}}</a>
                </li>
                <li class="page-item" ng-class="{disabled: currentPage === totalPages}">
                    <a class="page-link" href="" ng-click="nextPage()">Next</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="modal fade modal-xl" id="modalMenuList" tabindex="-1" aria-labelledby="modalMenuListLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
