@{
    ViewData["Title"] = "Health Hazards or Risk Factor";

    Layout = "~/Views/Shared/_LayoutWeb.cshtml";

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="~/assets/css/theme.min.css">

    <link rel="stylesheet" href="~/assets/css/tablefreezer.css">

    <link href="~/assets/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">

    <link href="~/assets/css/choices.min.css" type="text/css" rel="stylesheet">

    <link href="~/css/autocomplete.css" type="text/css" rel="stylesheet">

    <script src="~/assets/js/config.js"></script>

    <script src="~/assets/js/all.min.js"></script>

    <link rel="stylesheet" href="~/css/masterStyles/hazardRiskFactors_style.css">

}

<div class="p-6" id="divPage" ng-controller="ctrlAppPage">
    <div class="card container mt-6 p-6 ">
        <div class="title">
            <span class=" me-2 text-primary"><B>|</B></span> 
            Health Hazard of Risk Factor
        </div>
        <hr>
        <div class="d-flex align-items-end justify-content-between pb-2">
            <button class="btn btn-sm btn-success gap-2" ng-click="newData()">
                <i class="fa-solid fa-plus"></i>
                New Health Hazard
            </button>
            <div class="d-flex align-items-end gap-4">
                <div class="dropdown">
                    <label class="form-label ps-0 pb-1 col-auto" for="hazard_type">Type of Hazard </label>
                    <select class="form-control mb-0 col-auto" 
                        ng-model="selected.hazard_type"
                        ng-change="actionChangedMaster('hazard_type')">
                        <option value="">All</option>
                        <option ng-repeat="item2 in data_hazard_type" ng-value="item2.id">
                            {{item2.name}}
                        </option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-secondary" style="width: 100px;" ng-click="confirmBack()">Back</button>
                    <button class="btn btn-sm btn-primary " style="width: 100px;" ng-click="confirmSave()">Save</button>
                </div>
            </div>
        </div>
        <div class="card p-4">
            <table class="table table-sm fs--1 mb-0" >
                <thead class="bg-white"> 
                    <tr class="text-center">
                        <th rowspan="2" class="align-middle" style="width:100px">No</th>
                        <th rowspan="2" class="align-middle">Health Hazards or Risk Factor</th>
                        <th rowspan="2" class="align-middle">Health Effect Rating</th>
                        <th rowspan="1" colspan="4" class="align-middle">Standard</th>
                        <th rowspan="2" class="align-middle" style="width:100px">Active</th>
                        <th rowspan="2" class="align-middle" style="width:100px">Management</th>
                    </tr>
                    <tr class="text-center">
                        <th class="align-middle">Text</th>
                        <th class="align-middle">Value</th>
                        <th class="align-middle">Unit</th>
                        <th class="align-middle">Description</th>
                    </tr>
                </thead>
                <tbody class="list">
                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                         ng-repeat="item in paginatedData" id="row-{{$index}}">
                    <td class="align-middle">{{$index + 1 + ((currentPage - 1) * pageSize)}}</td>

                        <td class="align-middle ">
                            <div class="col-auto">
                                <input class="form-control" id="name" data-ng-model="item.health_hazards" type="text" placeholder="Name"
                                        ng-change="actionChangedData(item,'health_hazards')" />
                            </div>
                        </td>

                        <td class="align-middle ">
                            <div class="col-auto">
                                <input class="form-control" id="name" data-ng-model="item.hazards_rating" type="text" placeholder="Name"
                                        ng-change="actionChangedData(item,'hazards_rating')" />
                            </div>
                        </td>
                        <td class="align-middle ">
                            <div class="col-auto">
                                <input class="form-control" id="name" data-ng-model="item.standard_type_text" type="text" placeholder="Name"
                                        ng-change="actionChangedData(item,'standard_type_text')" />
                            </div>
                        </td>
                        <td class="align-middle ">
                            <div class="col-auto">
                                <input class="form-control" id="name" data-ng-model="item.standard_value" type="text" placeholder="Name"
                                        ng-change="actionChangedData(item,'standard_value')" />
                            </div>
                        </td>
                        <td class="align-middle ">
                            <div class="col-auto">
                                <input class="form-control" id="name" data-ng-model="item.standard_unit" type="text" placeholder="Name"
                                        ng-change="actionChangedData(item,'standard_unit')" />
                            </div>
                        </td>
                        <td class="align-middle ">
                            <div class="col-auto">
                                <input class="form-control" id="name" data-ng-model="item.standard_desc" type="text" placeholder="Name"
                                        ng-change="actionChangedData(item,'standard_desc')" />
                            </div>
                        </td>

                        <td class="align-middle">
                            <input type="checkbox" 
                                class="form-check-input"
                                style="cursor: pointer;width:20px; height:20px;"
                                ng-if="(item.active_type==1)" 
                                checked
                                ng-click="actionChangedData(item,'accept_status')">
                            <input type="checkbox" 
                                class="form-check-input"
                                style="cursor: pointer;width:20px; height:20px;"
                                ng-if="!(item.active_type==1)"
                                ng-click="actionChangedData(item,'inaccept_status')">
                        </td>

                        <td class="align-middle ">
                            <button class="btn btn-outline-secondary p-2"
                                style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                ng-click=removeData(item.seq,$index)
                                data-toggle="tooltip"
                                data-placement="top"
                                title="Remove">
                                <span class="fa-regular fa-trash-can fa-lg"></span>
                            </button>
                            @* <button class="btn btn-outline-secondary p-2"
                                style="color: #0abe0a; background-color: #f1f2f4; border-color: #0abe0a;"
                                ng-click=addData(item.seq,$index)
                                data-toggle="tooltip"
                                data-placement="top"
                                title="Add">
                                <span class="fas fa-square-plus fa-lg"></span>
                            </button> *@
                        </td>
                    </tr>
                    <tr ng-if="item.name === null">
                        <td colspan="8">
                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <nav class="d-flex align-items-center justify-content-end px-4 py-2" aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item" ng-class="{disabled: currentPage === 1}">
                        <a class="page-link" href="" ng-click="prevPage()" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item" ng-show="1 < currentPage - range" ng-click="setPage(1)">
                        <a class="page-link" href="">1</a>
                    </li>
                    <li class="page-item" ng-show="1 < currentPage - range">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item" ng-repeat="page in pages"
                        ng-show="page >= currentPage - range && page <= currentPage + range"
                        ng-class="{active: currentPage === page}">
                        <a class="page-link" href="" ng-click="setPage(page)">{{page}}</a>
                    </li>
                    <li class="page-item" ng-show="totalPages > currentPage + range">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item" ng-show="totalPages > currentPage + range" ng-click="setPage(totalPages)">
                        <a class="page-link" href="">{{totalPages}}</a>
                    </li>
                    <li class="page-item" ng-class="{disabled: currentPage === totalPages}">
                        <a class="page-link" href="" ng-click="nextPage()">Next</a>
                    </li>
                </ul>
            </nav>
    </div>
</div>

