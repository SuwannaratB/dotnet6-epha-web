@{
    ViewData["Title"] = "Storage Location";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="~/assets/css/theme.min.css">

    <link rel="stylesheet" href="~/assets/css/tablefreezer.css">

    <link href="~/assets/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">

    <link href="~/assets/css/choices.min.css" type="text/css" rel="stylesheet">

    <link href="~/css/autocomplete.css" type="text/css" rel="stylesheet">

    <script src="~/assets/js/config.js"></script>

    <script src="~/assets/js/all.min.js"></script>

}

<div class="content mt-1" style="font-size: 12px; min-height: auto!important;" id="divPage" ng-controller="ctrlAppPage">

    <div class="row g-0">

        <div class="col-12">

            <div class="card shadow-sm p-2 mb-3 bg-light rounded">

                <div class="card-body p-2">

                    <div class="row">

                        <div class="m-3 row  gx-0 align-items-center">

                            <div class="card px-2"
                                style="padding: 20px 20px 20px 20px; max-width: calc(100% - 30px); box-sizing: border-box;">

                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3 ">
                                    <div class="col-6 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span class=" me-2 text-primary"><B>|</B></span>Funtional Location</h5>
                                    </div>
                                    <div class="col-auto col-md">
                                        <div class="d-flex align-items-start py-2  justify-content-end d-none">
                                            <span class="mx-2">
                                                <button class="btn btn-outline-secondary btn-sm" style="width: 100px;" ng-click="confirmSave()">Save</button>
                                            </span>
                                        </div>
                                        <div class="d-flex align-items-center py-2  justify-content-end">
                                            <span class="mx-2">
                                                <button class="btn btn-outline-secondary btn-sm" style="width: 100px;" ng-click="confirmBack()">Back</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                 @*    <div class="col-12 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span class=" me-2 text-primary"><B>|</B></span>Company Data</h5>
                                    </div> *@
                                    <div class="table-responsive scrollbar " id="table-container">

                                        <table class="table fs--2 mb-0 " cellpadding="0" cellspacing="0">
                                            <thead class=" text-uppercase  text-center  bg-soft " style="font-size: 10px;" id="myHeader">
                                                <tr>
                                                    <td style='padding: 15px;'>No</td>
                                                    <td style='padding: 15px;'>Company Code</td>
                                                    <td style='padding: 15px;'>Company Name</td>
                                                    <td style='padding: 15px;'>Plant</td>
                                                    <td style='padding: 15px;'>descriptions</td>
                                                    <td style='padding: 15px;' class="d-none">Active</td>
                                                </tr>
                                            </thead>
                                            <tbody class="customer-rating-table-body">
                                                <tr class="hover-actions-trigger btn-reveal-trigger position-static rowwork"
                                                    ng-repeat="item in data_company | orderBy: seq">

                                                    <td class="align-top text-center" class="d-none">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{$index +1}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.id}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.name}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.plant}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.descriptions}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center d-none">
                                                        <div class="p-1 ">
                                                            <div class="form-check form-check-inline cursor-pointer p-0">
                                                                {{item.active_type}}
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>

                                        </table>

                                    </div>

                                </div>
                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                    <div class="col-12 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span class=" me-2 text-primary"><B>|</B></span>Function, Department and Section from PIS Database</h5>
                                    </div>
                                   <div class="container ">
    <div class="row align-items-center">
        <h5 class="col-auto">Filter</h5>
        

        <div class="col p-5">
    <select class="form-select rounded-1"
            id="function_{{$index}}" 
            placeholder="functions"
            name="functions" 
            ng-model="selectedFunction"
          ng-change="actionChange()">
        <option ng-repeat=" item in data_functions "
         value="{{item.functions}}">
          {{item.functions}}
      </option>
    </select>
</div>


        <div class="col p-5">
             <select class="form-select rounded-1"
            id="departments_{{$index}}" 
            placeholder="departments"
            name="departments" 
            ng-model="selectedDepartment"
            ng-change="actionChange()">
       <option ng-repeat="item in data_departments | orderBy: 'seq'" 
       ng-value="item.departments">
        {{item.departments}}
    </option>
    </select>
        </div>
        <div class="col p-5">
             <select class="form-select rounded-1"
            id="section_{{$index}}" 
            placeholder="section"
            name="section" 
            ng-model="selectedSection"
            ng-change="actionChange()">
       <option ng-repeat="item in data_section" value="{{item.sections}}">
        {{item.sections}}
    </option>
    </select>
        </div>
        <div class="col p-5">

        </div>
    </div>

</div>

                                    <div class="table-responsive scrollbar " id="table-container">

                                        <table class="table fs--2 mb-0 " cellpadding="0" cellspacing="0">
                                            <thead class=" text-uppercase  text-center  bg-soft " style="font-size: 10px;" id="myHeader">
                                                <tr>
                                                    
                                                    <td style='padding: 15px; width: 100px;'>No</td>
                                                    <td style='padding: 15px;'>Functions</td>
                                                    <td style='padding: 15px;'>Departments</td>
                                                    <td style='padding: 15px;'>Sections</td>
                                                    <td style='padding: 15px;' class="d-none">Active</td>
                                                    <td style='padding: 15px;' class="d-none"></td>
                                                </tr>
                                            </thead>
                                            <tbody class="customer-rating-table-body">
                                                <tr class="hover-actions-trigger btn-reveal-trigger position-static rowwork"
                                                    ng-repeat="item in filteredResults">
                                                    <td class="align-top text-center">
                                                        <div class="p-1">
                                                            <h6 class="fw-semi-bold">{{$index +1}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.functions}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.departments}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center">
                                                        <div class="p-1 ">
                                                            <h6 class="fw-semi-bold">{{item.sections}}</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center d-none">
                                                        <div class="p-1 ">
                                                            <div class="form-check form-check-inline cursor-pointer p-0">
                                                                {{item.active_type}}
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="align-top text-center d-none">
                                                        <div class="p-1 ">
                                                            <button class="btn btn-outline-secondary p-2"
                                                                    style="color: #0abe0a; background-color: #f1f2f4; border-color: #0abe0a;"
                                                                    data-toggle="tooltip"
                                                                    data-placement="top"
                                                                    title="Add"
                                                                    ng-click=addData(item,$index)>
                                                                <span class="fas fa-square-plus fa-lg"></span>
                                                            </button>

                                                            <button class="btn btn-outline-secondary p-2"
                                                                    data-toggle="tooltip"
                                                                    data-placement="top"
                                                                    title="Remove"
                                                                    style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                                                    ng-click=removeData(item,$index)>
                                                                <span class="fa-regular fa-trash-can fa-lg"></span>
                                                            </button>

                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>

                                        </table>

                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>


            </div>
        </div>

    </div>


</div>
@section Scripts {

    <script src="~/assets/js/angular.min.js"></script>
    <script src="~/assets/js/lodash.min.js"></script>
    <script src="~/assets/js/phoenix.js"></script>
    <script src="~/assets/js/choices.min.js"></script>
    <script src="~/assets/js/fakedata.js"></script>
    <script src="~/js/_master/systemwide/storage_location.js"></script>
}