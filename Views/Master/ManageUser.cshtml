@{
    ViewData["Title"] = "Manage User";

    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap"
          rel="stylesheet">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="stylesheet" href="~/assets/css/theme.min.css">

    <link rel="stylesheet" href="~/assets/css/tablefreezer.css">

    <link href="~/assets/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">
    <link href="~/assets/css/choices.min.css" type="text/css" rel="stylesheet">

    <script src="~/assets/js/config.js"></script>

}


<div class="content mt-1" style="font-size: 12px; min-height: auto!important;" id="divPage" ng-controller="ctrlAppPage">

    <div class="row g-0">

        <div class="col-12">

            <div class="card shadow-sm p-2 mb-3 bg-light rounded">

                <div class="card-body p-2">

                    <div class="row card">

                        <div class="m-3 row  gx-0 align-items-center">

                            <div class="card px-2"
                                style="padding: 20px 20px 20px 20px; max-width: calc(100% - 30px); box-sizing: border-box;">
                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                    <div class="col-6 col-md">
                                        <h5 class="text-900 mb-0" data-anchor="data-anchor"> <span class=" me-2 text-primary"><B>|</B></span>Manage User (Employee and Contracter)</h5>
                                    </div>
                                    <div style="padding: 10px 4px 10px 4px;">
                                        <hr style="margin: 0 4px; border: 0; border-top: 1px solid #ccc;" />
                                    </div>

                                    <div class="row g-3 justify-content-between align-items-center pt-2">
                                        <div class="col-md-10 pt-3 ps-4 align-items-start">
                                            <button class="btn btn-custom btn-sm"
                                                style="color: #0abe0a; background-color: #0abe0a; border-color: #0abe0a;"
                                                ng-click="addDataEmployee(item)">
                                                <span class="fa-solid fa-plus" style="color: #fff;"></span>
                                                <span class="form-label mb-0" style="color: #ffffff;"> New User </span>
                                            </button>
                                        </div>
                                        <div class="col-md-2 pt-3 align-items-end">
                                            <div class="position-relative">
                                                <button class="btn btn-secondary btn-sm" style="width: 100px;"
                                                    ng-click="confirmBack()">Back</button>
                                                <button class="btn btn-primary btn-sm" style="width: 100px;"
                                                    ng-click="confirmSave()">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">
                                    @* --- Start เพิ่ม/แก้ไข Account Contracter ตรงนี้ --- *@
                                    <div class="bg-white border-top border-bottom border-200 position-relative top-1">
                                        <div class="table-responsive scrollbar-overlay mx-n1 px-1">
                                            <table class="table table-sm fs--1 mb-0">
                                                <thead class=" text-uppercase">
                                                    <tr>
                                                        <th colspan="7" class="align-items-center"> <p class="text-700">Account Staff or Contractor</p></th>
                                                    </tr>
                                                    <tr class="text-center">
                                                        <th class="text-center" scope="col">Accept Status</th>
                                                        <th class="pe-5" scope="col">User Name</th>
                                                        <th class="pe-5" scope="col">Displayname</th>
                                                        <th class="pe-5" scope="col">E-Mail</th>
                                                        <th class="pe-5" scope="col">Password</th>
                                                        <th class="pe-5" scope="col">Confirm Password</th>
                                                        <th class=""> </th>

                                                    </tr>
                                                </thead>
                                                <tbody class=" list">

                                                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                                                    ng-repeat="item in data_register ">
                                                        <td class="">
                                                            <input type="checkbox" class="form-check-input"
                                                                   style="cursor: pointer;width:20px; height:20px;"
                                                                   ng-if="(item.accept_status==1)" checked
                                                                   ng-click="actionChangedData(item,'accept_status')">

                                                            <input type="checkbox" class="form-check-input"
                                                                   style="cursor: pointer;width:20px; height:20px;"
                                                                   ng-if="!(item.accept_status==1)" checked
                                                                   ng-click="actionChangedData(item,'accept_status')">
                                                        </td>

                                                        <td class="">
                                                            <input class="form-control" id="name" data-ng-model="item.user_name" type="text" placeholder="Name"
                                                                   ng-change="actionChangedData(item,'user_displayname')" />
                                                        </td>

                                                        <td class="">
                                                            <input class="form-control" id="name" data-ng-model="item.user_displayname" type="text" placeholder="Name"
                                                                   ng-change="actionChangedData(item,'user_displayname')" />
                                                        </td>

                                                        <td class="">
                                                            <input class="form-control" id="email" data-ng-model="item.user_email" type="email"
                                                                   placeholder="name@example.com"
                                                                   ng-change="actionChangedData(item,'user_email')" />
                                                        </td>
                                                        <td class="">
                                                            <input class="form-control form-icon-input" id="user_password" data-ng-model="item.user_password"
                                                                   ng-change="actionChangedData(item,'user_password')" />
                                                        </td>
                                                        <td class="">
                                                            <input class="form-control form-icon-input" id="user_password_confirm" data-ng-model="item.user_password_confirm"
                                                                   placeholder="Confirm Password"
                                                                   ng-change="actionChangedData(item,'user_password_confirm')" />
                                                        </td>
                                                        <td class="text-center">
                                                            <button class="btn btn-outline-secondary p-2"
                                                                    data-toggle="tooltip"
                                                                    data-placement="top"
                                                                    title="Remove"
                                                                    style="color: #ff2828; background-color: #f1f2f4; border-color: #ff2828;"
                                                                    ng-click="removeDataEmployee(item.seq, $index)"
                                                                    ng-if="!(item.register_type==1)">
                                                                <span class="fa-regular fa-trash-can fa-lg"></span>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <tr ng-if="item.user_displayname === null">
                                                        <td colspan="5">
                                                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>

                                    </div>
                                    
                                    @* --- End เพิ่ม/แก้ไข Account Contracter ตรงนี้ --- *@
                                </div>

                            
                            </div>
                        </div>

                        <div class="m-3 row  gx-0 align-items-center">

                            <div class="card px-2"
                                style="padding: 20px 20px 20px 20px; max-width: calc(100% - 30px); box-sizing: border-box;">
                                <div class="row g-3 justify-content-between align-items-center pt-2 pb-3">

                                    <div class="mb-4">

                                        <div class="row g-3">

                                            <div class="col-auto">

                                                <div class="search-box position-relative">

                                                    <input class="form-control search-input search"
                                                           ng-model="searchText" placeholder="Search"
                                                           ng-change="fillterDataEmployeeAdd()" />
                                                    <span class="fas fa-search search-box-icon"></span>
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                    @* start แสดงข้อมูลที่ ค้นหาตาม textsearch*@
                                    <div class="bg-white border-top border-bottom border-200 position-relative top-1">
                                        <div class="table-responsive scrollbar-overlay mx-n1 px-1">
                                            <table class="table table-sm fs--1 mb-0">
                                                <thead class=" text-uppercase">
                                                    <tr class="text-center">
                                                        <th class=""> </th>
                                                        <th class="pe-5" scope="col">Employee</th>
                                                        <th class="pe-5" scope="col">Indicator</th>
                                                        <th class="pe-5" scope="col">E-Mail</th>
                                                        <th class="pe-5" scope="col">Employee Type</th>

                                                    </tr>
                                                </thead>
                                                <tbody class=" list">

                                                    <tr class="hover-actions-trigger btn-reveal-trigger position-static text-center"
                                                        ng-if="employeelist_show.length > 0 && employeelist_show[0].employee_displayname !== null" ng-repeat="item in employeelist_show">

                                                        <td class="">
                                                        </td>

                                                        <td class="">
                                                            <a class=" text-decoration-none d-flex align-items-center">
                                                                <div class="avatar avatar-m" style="height: 20px; width: 20px;">
                                                                    <img ng-if="item.employee_img" class="rounded-circle" ng-src="../../{{ item.employee_img }}" alt="">
                                                                </div>
                                                                <p class="mb-0 ms-3 text-1100 fw-bold"> ({{item.employee_id}}){{item.employee_displayname}} </p>
                                                            </a>
                                                        </td>


                                                        <td class="">{{item.employee_position}} </td>

                                                        <td class="">{{item.employee_email}} </td>

                                                        <td class="">{{item.employee_type}}</td>

                                                    </tr>
                                                    <tr ng-if="employeelist_show[0].employee_displayname === null">
                                                        <td colspan="5">
                                                            <p class="mb-0 ms-3 text-1100 fw-bold text-center"> Not Found </p>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                    @* end แสดงข้อมูลที่ ค้นหาตาม textsearch*@


                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>


        </div>
    </div>

</div>
</div>

@section Scripts {

    <script src="~/assets/js/angular.min.js"></script>
    <script src="~/assets/js/lodash.min.js"></script>
    <script src="~/assets/js/phoenix.js"></script>
    <script src="~/assets/js/choices.min.js"></script>
    <script src="~/assets/js/fakedata.js"></script>

    <script src="~/js/_master/manage_user.js"></script>


}
